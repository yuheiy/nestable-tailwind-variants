{
  "name": "nestable-tailwind-variants",
  "version": "0.3.1",
  "description": "Tailwind CSS variant library with nestable conditions for compound styling instead of flat compoundVariants.",
  "homepage": "https://github.com/yuheiy/nestable-tailwind-variants#readme",
  "bugs": {
    "url": "https://github.com/yuheiy/nestable-tailwind-variants/issues"
  },
  "license": "MIT",
  "author": "Yuhei Yasuda <yuhei.yasuda1003@gmail.com> (https://yuheiy.com/)",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yuheiy/nestable-tailwind-variants.git"
  },
  "files": [
    "dist"
  ],
  "type": "module",
  "exports": {
    ".": "./dist/index.js",
    "./package.json": "./package.json"
  },
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "clean": "git clean -fx dist/",
    "format": "oxfmt",
    "format:check": "oxfmt --check",
    "knip": "knip",
    "lint": "oxlint",
    "lint:fix": "oxlint --fix",
    "release": "bumpp -r",
    "test": "vitest --run",
    "typecheck": "tsc --noEmit",
    "prepare": "git config --local core.hooksPath .githooks",
    "prepublishOnly": "node --run clean && node --run build"
  },
  "dependencies": {
    "tailwind-merge": "^3.4.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.3.1",
    "@commitlint/config-conventional": "^20.3.1",
    "bumpp": "^10.4.0",
    "knip": "^5.82.0",
    "lint-staged": "^16.2.7",
    "oxfmt": "^0.25.0",
    "oxlint": "^1.39.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.17"
  },
  "lint-staged": {
    "*": "oxfmt --no-error-on-unmatched-pattern",
    "*.{js,jsx,ts,tsx,mjs,cjs}": "node --run lint"
  },
  "devEngines": {
    "runtime": {
      "name": "node",
      "version": "^24.12.0",
      "onFail": "download"
    }
  },
  "packageManager": "pnpm@10.28.1"
}
