{
  "name": "nestable-tailwind-variants",
  "version": "0.1.4",
  "description": "A variant styling library for Tailwind CSS that expresses complex style combinations through nested condition definitions instead of flat `compoundVariants` patterns.",
  "homepage": "https://github.com/yuheiy/nestable-tailwind-variants#readme",
  "bugs": {
    "url": "https://github.com/yuheiy/nestable-tailwind-variants/issues"
  },
  "license": "MIT",
  "author": "Yuhei Yasuda <yuhei.yasuda1003@gmail.com> (https://yuheiy.com/)",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yuheiy/nestable-tailwind-variants.git"
  },
  "files": [
    "dist"
  ],
  "type": "module",
  "exports": {
    ".": "./dist/index.js",
    "./package.json": "./package.json"
  },
  "scripts": {
    "build": "tsc",
    "clean": "git clean -fx dist/",
    "format": "oxfmt",
    "format:check": "oxfmt --check",
    "lint": "oxlint",
    "lint:fix": "oxlint --fix",
    "release": "bumpp -r",
    "test": "vitest",
    "typecheck": "tsc --noEmit",
    "prepare": "git config --local core.hooksPath .githooks",
    "prepublishOnly": "node --run clean && node --run build"
  },
  "dependencies": {
    "tailwind-merge": "^3.4.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.3.1",
    "@commitlint/config-conventional": "^20.3.1",
    "bumpp": "^10.3.2",
    "lint-staged": "^16.2.7",
    "oxfmt": "^0.24.0",
    "oxlint": "^1.39.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.17"
  },
  "lint-staged": {
    "*": "oxfmt --no-error-on-unmatched-pattern",
    "*.{js,jsx,ts,tsx,mjs,cjs}": "node --run lint"
  },
  "devEngines": {
    "runtime": {
      "name": "node",
      "version": "^24.12.0",
      "onFail": "download"
    }
  },
  "packageManager": "pnpm@10.28.0"
}
